<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fight_pv_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:id="@+id/fight_pv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin"
        android:background="@color/colorPrimaryDark"
        android:elevation="2dp"
        android:paddingHorizontal="@dimen/small_margin"
        android:paddingVertical="@dimen/txt_margin"
        android:text="@string/fight_pv"
        android:textAlignment="center"
        android:textColor="@color/color_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/app_margin"
        android:layout_marginTop="@dimen/double_app_margin"
        android:background="@color/dark_panel"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fight_pv_value_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/fight_pv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"
                android:textColor="@color/color_txt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fight_pv_slash"/>

            <TextView
                android:id="@+id/fight_pv_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/color_txt"
                android:layout_marginStart="@dimen/txt_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fight_pv_value"
                app:layout_constraintEnd_toStartOf="@+id/fight_pv_max_value"/>

            <TextView
                android:id="@+id/fight_pv_max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56"
                android:textColor="@color/color_txt"
                android:layout_marginHorizontal="@dimen/txt_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fight_pv_slash"
                app:layout_constraintEnd_toStartOf="@+id/fight_pv_bonus_value"/>

            <TextView
                android:id="@+id/fight_pv_bonus_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fight_pv_bonus"
                android:textColor="@color/bonus"
                android:padding="@dimen/small_margin"
                android:background="@drawable/shape_dotted"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/app_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fight_pv_max_value"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/fight_pv_add"
            android:layout_width="@dimen/button_mini"
            android:layout_height="@dimen/button_mini"
            android:layout_marginEnd="@dimen/txt_margin"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_marginBottom="@dimen/small_margin"
            app:tint="@color/light_green"
            app:layout_constraintTop_toBottomOf="@+id/fight_pv_value_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fight_pv_minus"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/fight_pv_minus"
            android:layout_width="@dimen/button_mini"
            android:layout_height="@dimen/button_mini"
            android:layout_marginEnd="@dimen/txt_margin"
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_marginBottom="@dimen/small_margin"
            app:tint="@color/red"
            app:layout_constraintTop_toBottomOf="@+id/fight_pv_value_layout"
            app:layout_constraintStart_toEndOf="@+id/fight_pv_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>